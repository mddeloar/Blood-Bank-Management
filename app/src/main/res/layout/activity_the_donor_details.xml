<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundcolor"
    android:gravity="center"
    tools:context="com.example.mddeloarhossain.bloodbankmanagement.TheDonorDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DetailsTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#1a0a0a"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.CardView

            android:id="@+id/MakeCallCardViewId"

            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/circlebackgroundpink"
                    android:src="@drawable/ic_callw_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Make Call"
                    android:textSize="18dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.CardView

            android:id="@+id/SendMessageCardViewId"

            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/circlebackgroundyello"
                    android:src="@drawable/ic_message_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Send Message"
                    android:textSize="18dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.CardView

            android:id="@+id/SendEmailCardViewId"

            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/circlebackgroundpurple"
                    android:src="@drawable/ic_email_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Send Email"
                    android:textSize="18dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>





    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/EditDonorCardViewId"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="116dp"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebackgroundgreen"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Edit"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:id="@+id/DeleteDonorCardViewId"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="116dp"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebackgroundgreen"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Delete"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>






    </LinearLayout>


    </LinearLayout>



</ScrollView>
