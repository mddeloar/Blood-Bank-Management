<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="com.example.mddeloarhossain.bloodbankmanagement.DonorDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/DetailsTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#1a0a0a"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <Button
                android:id="@+id/PrifileButtonId"

                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textAlignment="center"

                android:layout_marginTop="10dp"
                android:layout_width="280dp"
                android:layout_height="55dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/EditButtonId"

                    android:text="Edit"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textAlignment="center"

                    android:layout_marginTop="10dp"
                    android:layout_width="140dp"
                    android:layout_height="55dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_margin="5dp"
                    />
                <Button
                    android:id="@+id/DeleteButtonId"

                    android:text="Delete"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textAlignment="center"

                    android:layout_marginTop="10dp"
                    android:layout_width="140dp"
                    android:layout_height="55dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <Button
                android:id="@+id/CallButtonId"

                android:text="Call"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textAlignment="center"

                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/MessageButtonId"

                android:text="Message"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textAlignment="center"

                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="5dp"
                />
                <Button
                android:id="@+id/EmailButtonId"

                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textAlignment="center"

                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_margin="5dp"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
