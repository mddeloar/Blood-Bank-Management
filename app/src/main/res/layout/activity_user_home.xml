<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    tools:context="com.example.mddeloarhossain.bloodbankmanagement.UserHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView

                android:id="@+id/UserBloodStockInfoCardViewId"

                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circlebackgroundpink"
                        android:src="@drawable/ic_whatshot_black_24dp"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Blood Stock"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView

                android:id="@+id/UserDonorInfoCardViewId"

                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circlebackgroundyello"
                        android:src="@drawable/ic_group_black_24dp"
                        android:padding="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Donor Information"
                        android:textSize="18dp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView

                android:id="@+id/UserUserInfoCardViewId"

                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circlebackgroundgreen"
                        android:src="@drawable/ic_send_black_24dp"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Request For Blood"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView

                android:id="@+id/UserFeedbackInfoCardViewId"

                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circlebackgroundpurple"
                        android:src="@drawable/ic_message_black_24dp"
                        android:padding="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Send Feedback"
                        android:textSize="18dp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView

                android:id="@+id/UserContactInfoCardViewId"

                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circlebackgroundyello"
                        android:src="@drawable/ic_record_voice_over_black_24dp"
                        android:padding="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Contact Us"
                        android:textSize="18dp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView

                android:id="@+id/UserAboutInfoCardViewId"

                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circlebackgroundpink"
                        android:src="@drawable/ic_assignment_black_24dp"
                        android:padding="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="About Us"
                        android:textSize="18dp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>





        </LinearLayout>



    </LinearLayout>

</ScrollView>
